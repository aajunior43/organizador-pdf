# Application Settings
APP_NAME=PDF Organizer
VERSION=3.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-change-in-production-make-it-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./pdf_organizer.db
# For PostgreSQL: postgresql://user:password@localhost:5432/pdf_organizer
# For MySQL: mysql://user:password@localhost:3306/pdf_organizer

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50MB in bytes
MAX_FILES_PER_UPLOAD=20
ALLOWED_EXTENSIONS=.pdf

# PDF Processing
PDF_QUALITY=85
THUMBNAIL_WIDTH=200
THUMBNAIL_HEIGHT=280
PREVIEW_DPI=150

# OCR Settings
OCR_ENABLED=true
OCR_LANGUAGE=por+eng
TESSERACT_CMD=/usr/bin/tesseract  # Path to tesseract executable

# Email Settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_SSL=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=pdf_organizer.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# CORS Settings
ALLOWED_HOSTS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Storage Paths
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
TEMP_DIR=temp
STATIC_DIR=static

# Performance
WORKERS=4
MAX_CONNECTIONS=1000
KEEP_ALIVE=2

# Monitoring
SENTRY_DSN=  # Optional: Sentry DSN for error tracking
ENABLE_METRICS=false

# Development
RELOAD=true
AUTO_RELOAD=true